<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="com.prescription.doctorprescription.fragment.create_prescription.PrescriptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:background="@drawable/layout_background_drawable"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtMedicinetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="Medicine"
            android:nextFocusUp="@+id/edtMedicinetName"
            android:nextFocusLeft="@+id/edtMedicinetName"
            android:background="@drawable/edittext_background_drawable"
            android:drawableRight="@drawable/search_icon"
            android:padding="6dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtDose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="Dose"
            android:nextFocusUp="@+id/edtDose"
            android:nextFocusLeft="@+id/edtDose"
            android:background="@drawable/edittext_background_drawable"
            android:drawableRight="@drawable/search_icon"
            android:padding="6dp"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/edtDayMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="2"
            android:hint="D/M"
            android:nextFocusUp="@+id/edtDose"
            android:nextFocusLeft="@+id/edtDose"
            android:background="@drawable/edittext_background_drawable"
            android:padding="6dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="Duration"
            android:nextFocusUp="@+id/edtDuration"
            android:nextFocusLeft="@+id/edtDuration"
            android:background="@drawable/edittext_background_drawable"
            android:drawableRight="@drawable/search_icon"
            android:padding="6dp"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="110dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_header_container"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:text="Medicine Name"
                android:textColor="@color/White"
                android:textSize="18sp"
                android:layout_weight="1.5"
                android:textStyle="bold" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/White" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:text="Doses"
                android:textColor="@color/White"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textStyle="bold" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/White" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:text="Duration"
                android:textColor="@color/White"
                android:textSize="18sp"
                android:layout_weight="1.5"
                android:textStyle="bold" />

        </LinearLayout>

        <ListView
            android:id="@+id/listViewMedDoseDura"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
        </ListView>
    </LinearLayout>


</RelativeLayout>
