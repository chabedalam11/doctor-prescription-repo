            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Advice Two"
            android:textAppearance="?android:attr/textAppearanceLargeInverse"
            android:textColor="#313fae" />

        <TextView
            android:id="@+id/tvAdviceTwo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Not set"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#313fae" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adviceThreeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/adviceTwoLayout"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_layout_background"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Advice Three"
            android:textAppearance="?android:attr/textAppearanceLargeInverse"
            android:textColor="#313fae" />

        <TextView
            android:id="@+id/tvAdviceThree"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Not set"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#313fae" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adviceFourLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/adviceThreeLayout"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_layout_background"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Advice Four"
            android:textAppearance="?android:attr/textAppearanceLargeInverse"
