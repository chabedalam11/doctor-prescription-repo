<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#e99b15" />
            <stroke
                android:width="1dp"
                android:color="#f00e06" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#f3c81b"
                android:endColor="#e99b15"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#bb0e08" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
</selector>